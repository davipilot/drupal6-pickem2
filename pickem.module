/**
 * Implementation of hook_cron().
 */
function pickem_cron() {
  $row = db_fetch_object(db_query("SELECT pw.wid,pw.wk_firstgame, UNIX_TIMESTAMP(pw.wk_firstgame) - UNIX_TIMESTAMP(CURDATE()) as diff FROM {pickem_weeks} pw where wk_firstgame > CURDATE() order by wk_firstgame"));
  $wid = $row->wid;
  $days = ($row->diff) / 86400; #days
  $firstgame = $row->wk_firstgame;

  if ($days <= 2 && $days > 0) {
    $query = 'select pu.nid, u.uid, u.mail, u.name, count(pp.pid) picks, count(pg.gid) games, pg.wid from {users} u inner join {pickem_users} pu on pu.uid=u.uid left outer join {pickem_picks} pp on pp.uid=u.uid and pp.nid=pu.nid right outer join {pickem_games} pg on pg.gid=pp.gid where pg.wid=%d group by pu.nid, u.uid, u.mail, u.name';
    $result = db_query($query, $wid);
    while ($row = db_fetch_object($result)) {
      $missing_count = $row->games - $row->picks;
      if ( $missing_count > 0 ) {
        $user = user_load($row->uid);
        email_warning($user, $row->wid, $firstgame, $missing_count, $row->nid);
      }      
    }
  }
}




